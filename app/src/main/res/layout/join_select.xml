<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/customToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kpbold"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/kpbold"
        android:gravity="center"
        android:text="안녕하세요!\n생성할 계정 종류를 선택하세요."
        android:textColor="@color/black"
        android:textSize="18sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seller" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_join_seller"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10sp"
                android:background="@drawable/statebox_green"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/kp"
                android:text="판매자"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/customer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_join_customer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10sp"
                android:background="@drawable/statebox_green"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/kp"
                android:text="구매자"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

</FrameLayout>